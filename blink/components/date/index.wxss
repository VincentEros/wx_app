/* components/date/index.wxss */
.container {
  display: inline-flex;
  height: 60rpx;
  flex-direction: row;
}

.index-container {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.plain {
  font-size: 32rpx;
}

.index {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;
}

.line {
  height: 44rpx;
  margin-right: 14rpx;
  border-left: 1px solid black;
}

.date-container {
  font-size: 24rpx;
  line-height: 28rpx;
  margin-top: 5rpx;
  display: flex;
  flex-direction: column;
}

.year {
  font-size: 20rpx;
}

