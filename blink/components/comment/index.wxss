/* components/search/index.wxss */

.bottom {
  position: fixed; 
  bottom: 0;
  background-color: #ffffff;
  height:100rpx;
  width:100%;
  border-top:1px solid #f5f5f5;
  border-bottom:1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-shadow:0 0 3px 0 #e3e3e3; 
  z-index: 99;
}

.box {
  font-size: 24rpx;
  margin-left: 30rpx;
  display:flex; 
  flex-direction: row;
  justify-content: flex-start;
  align-items: center; 
  border: 1rpx solid #999999;
  border-radius: 50rpx;
  background-color: #f5f5f5;
  height: 50rpx;
  width: 50%;
  color:#999999;
}

.search-img {
  margin:0 10px;
  width:14px;
  height:14px;
  margin-bottom:-2px;
}

v-like {
  margin-right: 50rpx;
}