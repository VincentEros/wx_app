/* pages/book-detail/book-detail.wxss */

.detail-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width:100%;
}

.content {
  position: relative;
  top: 100rpx;
  margin-bottom: 90rpx;
}


.thumbnail {
  padding-top: 30rpx;
  width: 240rpx;
  height: 360rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  padding: 20rpx 0;
}

.mini-title {
  font-size: 30rpx;
  padding: 20rpx 0;
}

text {
word-break: break-all;
}


.detail-box {
  font-size: 28rpx;
  padding: 0 50rpx 30rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* border-top: 10rpx solid #f5f5f5; */
  border-bottom: 10rpx solid #f5f5f5;
}

.mini-box {
  width: 100%;
  display: inline-flex;
  flex-direction: column;
  align-items: flex-start;
  /* justify-content: cenfter; */
}

.comments {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.comments > v-tag {
  margin: 0 15rpx 10rpx 0;
}

.fav-nums {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}

